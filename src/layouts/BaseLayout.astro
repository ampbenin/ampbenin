---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

// Versioning agressif basé sur timestamp + random pour casser tout cache Facebook
const version = `${Date.now()}-${Math.floor(Math.random() * 999999)}`;

const {
  title = "AMP BENIN",
  description = "Action Monde Productif - Article du jour - 16 Jours d'activisme contre les VBG.",
  url = "https://ampbenin.netlify.app",
  imagePath = "/og-image.jpg" // chemin relatif (image stockée dans /public)
} = Astro.props;

// URL complète valide
const image = `https://ampbenin.netlify.app${imagePath}?v=${version}`;
const fallbackPng = `https://ampbenin.netlify.app/og-image.png?v=${version}`; // Pour vider le cache des anciennes URLs
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.ico" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph / Facebook / LinkedIn / WhatsApp -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={url} />

    <!-- Image principale -->
    <meta property="og:image" content={image} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={title} />

    <!-- Fallback silencieux pour forcer Facebook à vider ses anciens caches -->
    <meta property="og:image:secure_url" content={image} />
    <meta property="og:image" content={fallbackPng} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    <meta name="twitter:image:alt" content={title} />

    <slot name="head" />
  </head>

  <body class="flex flex-col min-h-screen bg-green-100">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
