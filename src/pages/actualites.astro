---
import BaseLayout from '../layouts/BaseLayout.astro';

const articles = [
  {
    title: "Lancement de la campagne nationale pour la paix",
    date: "1er Août 2025",
    excerpt: "AMP BENIN mobilise les jeunes à travers tout le pays pour promouvoir la paix et la cohésion sociale.",
    image: "/images/actualite-paix.jpg",
    link: "/actualites/lancement-campagne-paix"
  },
  {
    title: "Forum des jeunes pour le développement durable",
    date: "15 Juin 2025",
    excerpt: "Une centaine de jeunes se sont réunis à Cotonou pour échanger sur les enjeux des ODD au Bénin.",
    image: "/images/forum-jeunesse.jpg",
    link: "/actualites/forum-jeunesse-odd"
  }
];
---

<BaseLayout title="Actualités AMP BENIN">
  <section class="bg-white py-16 px-4">
    <div class="max-w-6xl mx-auto text-center mb-10">
      <h1 class="text-4xl font-bold text-primary mb-4">Nos Actualités</h1>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        Suivez toutes les actions, projets et temps forts de AMP BENIN à travers le pays et à l’international.
      </p>
    </div>
  </section>

  <section class="bg-gray-100 py-16 px-4">
    <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-8">
      {articles.map(article => (
        <a href={article.link} class="block bg-white rounded-2xl shadow hover:shadow-lg transition overflow-hidden">
          <img src={article.image} alt={article.title} class="w-full h-56 object-cover" loading="lazy" />
          <div class="p-6">
            <h2 class="text-2xl font-semibold text-primary mb-2">{article.title}</h2>
            <p class="text-sm text-gray-500 mb-2">{article.date}</p>
            <p class="text-gray-600">{article.excerpt}</p>
          </div>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
