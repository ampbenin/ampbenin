<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto flex items-center justify-between p-4">
    <!-- Logo -->
    <a href="/Logo.png" class="text-xl font-bold text-green-700">
      AMP BENIN - ACTION MONDE PRODUCTIF
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex gap-6 text-gray-700 font-medium">
      <a href="/" class="hover:text-green-700">Accueil</a>
      <a href="/a-propos" class="hover:text-green-700">À propos</a>
      <a href="/is" class="hover:text-green-700">Institutions</a>
      <a href="/actualites" class="hover:text-green-700">Actualités</a>
      <a href="/contact" class="hover:text-green-700">Contact</a>
    </nav>

    <!-- Mobile Menu Toggle -->
    <button id="mobile-menu-toggle" class="md:hidden text-gray-700 focus:outline-none">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
           viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
        <path d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </div>

  <!-- Mobile Nav -->
  <div id="mobile-menu" class="hidden md:hidden bg-white px-4 pb-4">
    <a href="/" class="block py-2 text-gray-700 hover:text-green-700">Accueil</a>
    <a href="/a-propos" class="block py-2 text-gray-700 hover:text-green-700">À propos</a>
    <a href="/is" class="block py-2 text-gray-700 hover:text-green-700">Institutions</a>
    <a href="/actualites" class="block py-2 text-gray-700 hover:text-green-700">Actualités</a>
    <a href="/contact" class="block py-2 text-gray-700 hover:text-green-700">Contact</a>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const toggle = document.getElementById("mobile-menu-toggle");
      const menu = document.getElementById("mobile-menu");
      toggle?.addEventListener("click", () => {
        menu?.classList.toggle("hidden");
      });
    });
  </script>
</header>
