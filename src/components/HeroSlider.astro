---
const slides = [
  {
    image: "/images/hero1.jpg",
    title: "Pour un Bénin durable et inclusif",
    subtitle: "Ensemble, promouvons les Objectifs de Développement Durable."
  },
  {
    image: "/images/hero2.jpg",
    title: "Mobilisation citoyenne et engagement",
    subtitle: "Accompagnons les jeunes et communautés vers un avenir meilleur."
  },
  {
    image: "/images/hero3.jpg",
    title: "Innovation et solidarité",
    subtitle: "Soutenons les projets transformateurs pour notre pays."
  }
];
const SLIDE_COUNT = slides.length;
---

<section class="relative w-full overflow-hidden">
  <div
    id="hero-slider"
    class="flex transition-transform duration-700 ease-in-out"
    data-slide-count={SLIDE_COUNT}
  >
    {slides.map((slide) => (
      <div class="min-w-full relative h-[400px] md:h-[500px] lg:h-[600px]">
        <img
          src={slide.image}
          alt={slide.title}
          class="w-full h-full object-cover"
          loading="lazy"
        />
        <div class="absolute inset-0 bg-black/40 flex flex-col justify-center items-center text-center text-white px-4">
          <h1 class="text-2xl md:text-4xl font-bold mb-2">{slide.title}</h1>
          <p class="text-sm md:text-lg max-w-2xl">{slide.subtitle}</p>
        </div>
      </div>
    ))}
  </div>

  <script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
      const slider = document.getElementById("hero-slider");
      const totalSlides = parseInt(slider.dataset.slideCount);
      let index = 0;

      setInterval(() => {
        index = (index + 1) % totalSlides;
        slider.style.transform = `translateX(-${index * 100}%)`;
      }, 5000);
    });
  </script>
</section>
