---
const timeline = [
  { date: "11 Novembre", event: "Lancement d'appel à canditacture de recrutement des 300 Volontaires" },
  { date: "25 Novembre", event: "Lancement officiel des 16 Jours d'activisme contre les VBG" },
  { date: "27 Novembre", event: "Démarrage de la campagne digitale sur le plan national avec 300 jeunes classés dans 3équipes" },
  { date: "06 Décembre", event: "WEBINAIRE : Jeunes et le numérique sans les violences" },
  { date: "06 Décembre", event: "Formation sur les droits des femmes" },
  { date: "06 Décembre", event: "Démarrage des activités sur le terrain" },
  { date: "10 Décembre", event: "Marche ORANGEZ LE MONDE" },

];
---

<section class="bg-gray-100 py-20">
  <div class="max-w-5xl mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-12">Calendrier des Activités</h2>

    <div class="space-y-8">
      {timeline.map((item) => (
        <div class="flex gap-6 items-start">
          <div class="bg-orange-600 text-white px-4 py-2 rounded-lg text-center min-w-[110px]">
            <span class="font-bold">{item.date}</span>
          </div>
          <div class="bg-white p-6 rounded-xl shadow-md w-full border">
            <p class="text-lg font-semibold text-gray-800">{item.event}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
